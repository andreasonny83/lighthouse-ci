{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "LH-CI-Mobile",
            "program": "${workspaceFolder}\\bin\\cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "https://example.com/",
                "--report=report",

                "--only-categories=performance",
                "--only-categories=seo",
                "--only-categories=best-practices",
                "--only-categories=accessibility",

                "--emulated-form-factor=mobile",
                "--throttling-method=simulate",
                "--throttling.rttMs=100",
                "--throttling.throughputKbps=5120",
                "--throttling.cpuSlowdownMultiplier=1",

                "--accessibility=100",

                "--audit.accesskeys=true",
                "--audit.first-contentful-paint=3000",
                "--audit.speed-index=5000",
                "--audit.interactive=8000",

                "--validate={\"\"audits\"\": [{\"\"id\"\": \"\"accesskeys\"\", \"\"expect\"\": true}, {\"\"id\"\": \"\"first-contentful-paint\"\", \"\"warn\"\": 3000, \"\"error\"\": 5000}, {\"\"id\"\": \"\"speed-index\"\", \"\"warn\"\": 5000,\"\"error\"\": 10000}, {\"\"id\"\": \"\"interactive\"\",\"\"warn\"\": 8000,\"\"error\"\": 15000}], \"\"categories\"\": [{\"\"id\"\": \"\"performance\"\",\"\"warn\"\": 0.5,\"\"error\"\": 0.25}]}",
            ]
        },

        {
            "type": "node",
            "request": "launch",
            "name": "LH-CI-Desktop",
            "program": "${workspaceFolder}\\bin\\cli",
            "cwd": "${workspaceFolder}",
            "args": [
                "https://example.com/",
                "--report=report",

                "--only-categories=performance",
                "--only-categories=seo",
                "--only-categories=best-practices",
                "--only-categories=accessibility",

                "--emulated-form-factor=desktop",
                "--throttling-method=simulate",
                "--throttling.rttMs=100",
                "--throttling.throughputKbps=5120",
                "--throttling.cpuSlowdownMultiplier=1",

                "--v={\"\"audits\"\": [{\"\"id\"\": \"\"accesskeys\"\", \"\"expect\"\": true}, {\"\"id\"\": \"\"first-contentful-paint\"\", \"\"warn\"\": 3000, \"\"error\"\": 5000}, {\"\"id\"\": \"\"speed-index\"\", \"\"warn\"\": 5000,\"\"error\"\": 10000}, {\"\"id\"\": \"\"interactive\"\",\"\"warn\"\": 8000,\"\"error\"\": 15000}], \"\"categories\"\": [{\"\"id\"\": \"\"performance\"\",\"\"warn\"\": 0.5,\"\"error\"\": 0.25}]}",
            ]
        }
    ]
}
